<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.log.LogSleepFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNursingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Start Time"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNursingTime2"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:text="End Time"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/btnSleepTimeStart"
        app:layout_constraintTop_toBottomOf="@+id/btnSleepTimeStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSleepTimeStart"
        style="?spinnerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11:28 AM"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/tvNursingTime"
        app:layout_constraintTop_toBottomOf="@+id/tvNursingTime" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSleepTimeEnd"
        style="?spinnerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="11:28 AM"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/tvNursingTime2"
        app:layout_constraintTop_toBottomOf="@+id/tvNursingTime2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSleepNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/primaryLightColor"
        android:hint="Note"
        android:minHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSleepTimeEnd"
        app:layout_constraintTop_toBottomOf="@+id/btnSleepTimeEnd" />

</androidx.constraintlayout.widget.ConstraintLayout>